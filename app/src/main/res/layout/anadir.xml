        app:layout_constraintVertical_bias="0.371" />

    <ImageView
        android:id="@+id/ivSlider"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
